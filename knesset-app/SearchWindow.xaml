        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="knesset_app.SearchWindow"
        
mc:Ignorable="d"
        Title="חלון חיפוש" Height="697.684" Width="900">



    <TabControl HorizontalAlignment="Left"  Margin="0,0,0,-1" Width="892"  FlowDirection="LeftToRight"   SelectionChanged="TabControl_SelectionChanged" >
        <TabItem  x:Name="tiBackwardSearch" Header="חיפוש הפוך" IsSelected="True" Margin="-2,-2,-153,-12" FontSize="16"  >
            <Grid HorizontalAlignment="Center" Height="610"  VerticalAlignment="Top" FlowDirection="RightToLeft"  Width="879" Margin="-1,15,8,0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="149*"/>
                    <ColumnDefinition Width="393*"/>
                    <ColumnDefinition Width="334*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>




                <TextBlock Text="פרוטוקול" Grid.Column="1" HorizontalAlignment="Left" Margin="26,15,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="103.667" FontSize="16"><Run FlowDirection="RightToLeft" /></TextBlock>
                <TextBox x:Name="protocolName" Grid.Column="2" HorizontalAlignment="Left" Height="34" Margin="24,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="558" Grid.ColumnSpan="2"/>

                <CheckBox x:Name="checkSpeakerBox" Content="חיפוש לפי דובר" Checked="CheckBox_Changes" Unchecked="CheckBox_Changes" IsChecked="False" Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="19,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="130" />


                <Viewbox x:Name="WordNumSearch" Grid.ColumnSpan="2" Grid.Column="1" Margin="26,10,161,8" Grid.Row="3" Grid.RowSpan="2" 
                         Stretch="Fill"  IsHitTestVisible="True">
                    <Grid Height="84" Width="355">

                        <TextBlock Text="מספר פסקה" HorizontalAlignment="Left" Margin="0,6,0,0" TextWrapping="Wrap" Height="21" Width="104" FontSize="16" VerticalAlignment="Top"><Run FlowDirection="RightToLeft" /></TextBlock>
                        <TextBlock Text="מספר מילה" HorizontalAlignment="Left" Margin="0,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="104" FontSize="16"><Run FlowDirection="RightToLeft" /></TextBlock>
                        <TextBox x:Name="paragraphNum" TextChanged="numericTxt_Change" HorizontalAlignment="Left" Height="33" Margin="147,0,0,0" TextWrapping="Wrap" Text="" Width="208" VerticalAlignment="Top"/>
                        <TextBox x:Name="wordNum" TextChanged="numericTxt_Change" HorizontalAlignment="Left" Height="33" Margin="147,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="208" />
                    </Grid>
                </Viewbox>
                <Viewbox x:Name="SpeakerSearch" Margin="26,7,87,-58" Visibility="Hidden" Stretch="Fill" Grid.ColumnSpan="2" Grid.Column="1" Grid.RowSpan="2" Grid.Row="3">
                    <Grid Height="133" Width="417" IsHitTestVisible="True">
                        <TextBlock Text="שם הדובר" Margin="0,6,313,0" TextWrapping="Wrap" Height="21" FontSize="16" VerticalAlignment="Top"><Run FlowDirection="RightToLeft" /></TextBlock>
                        <TextBlock Text="מספר פסקה של הדובר" Margin="0,57,248,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" FontSize="16"><Run FlowDirection="RightToLeft" /></TextBlock>
                        <TextBox x:Name="SpkeakerName" HorizontalAlignment="Left" Height="33" Margin="209,0,0,0" TextWrapping="Wrap" Text="" Width="208" VerticalAlignment="Top"/>
                        <TextBox x:Name="PgSpeakerNum" TextChanged="numericTxt_Change" HorizontalAlignment="Left" Height="33" Margin="209,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="208" />
                        <TextBlock Text="היסט בפסקה" Margin="0,106,313,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" FontSize="16"><Run FlowDirection="RightToLeft" /></TextBlock>
                        <TextBox x:Name="PgOffset" TextChanged="numericTxt_Change" HorizontalAlignment="Left" Height="33" Margin="209,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="208" />


                    </Grid>
                </Viewbox>


                <Button x:Name ="btnSearchBackwards" Content="חפש" Click="btnSearch_Backwards" Grid.Column="2" HorizontalAlignment="Left" Margin="221,131,0,-118" Grid.Row="4" VerticalAlignment="Top" Width="144" Height="38" FontSize="16"/>


                <ListBox x:Name="lstResultsBackwardSearch" Grid.Column="1" HorizontalAlignment="Left" Height="188" Margin="34,187,0,-324" Grid.Row="4" VerticalAlignment="Top" Width="797" Grid.ColumnSpan="3" ItemTemplate="{StaticResource WordDisplay}"  />
            </Grid>



        </TabItem>



        <TabItem   x:Name="tiSearchCommitties" Header="נוכחים/מוזמנים/כותרת/וועדה" IsSelected="True" Margin="153,-2,-240,-12" FontSize="16">
            <Grid HorizontalAlignment="Center" Height="620"  VerticalAlignment="Center" FlowDirection="RightToLeft"  Width="879" Margin="-2,12,7,-2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="244*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid  Grid.Column="2" Grid.Row="0" Margin="0,0,140,0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <DatePicker x:Name="dpFromDate" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="6.339,13.471,4.339,4.47" Width="185" Height="35" VerticalContentAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="2.333,0.521" Margin="16.154,18.33,162.154,13.33"><Run Text="עד"/></TextBlock>
                    <DatePicker  x:Name="dpToDate" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="50.5,13.471,155.857,4.47" Width="185" Height="35" Grid.ColumnSpan="2" VerticalContentAlignment="Center" />
                </Grid>

                <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="23.5" Margin="41.501,16.5,50.482,10" Width="57" Grid.Column="1"><Run Text="החל מ"/></TextBlock>
                <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="23.5" Margin="41.501,16.5,41.482,10" Width="66" Grid.Column="1"><Run Text="כותרת"/></TextBlock>
                <TextBlock Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="23.5" Margin="41.501,16.5,50.482,10" Width="57" Grid.Column="1"><Run Text="וועדה"/></TextBlock>
                <TextBlock Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="23.5" Margin="41.501,16.5,50.482,10" Width="57" Grid.Column="1"><Run Text="מוזמנים"/></TextBlock>
                <TextBlock Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Height="23.5" Margin="41.501,16.5,41.482,10" Width="66" Grid.Column="1" ><Run Text="נוכחים"/></TextBlock>




                <TextBox x:Name ="cbProtocolTitle" Grid.Row="1"  Grid.Column="2" Margin="5,5,140,5"    />
                <ComboBox  x:Name ="cbProtocolCommitte"  Grid.Row="2" Grid.Column="2"  IsDropDownOpen="False" IsEditable="True" IsSynchronizedWithCurrentItem="False"  Margin="5,5,140,5"  />
                <TextBox x:Name ="cbInvited" Grid.Row="3" Grid.Column="2" Margin="5,5,140,5"  Height="40" />
                <TextBox x:Name ="cbPersence"   Grid.Row="4" Grid.Column="2" Margin="5,5,140,5" Height="40" />

                <Button x:Name ="btnSearch"   Grid.Row="5" Grid.Column="2" Click="btnSearch_Click" Margin="221,10,350,0" Height="40" VerticalAlignment="Top" Content="חפש"/>
                <Button x:Name ="btnClearFields"   Grid.Row="5" Grid.Column="2" Click="btnClearFields_Click" Margin="605,16,16,0" Height="29" VerticalAlignment="Top" Content="נקה"/>

                <ListBox x:Name="lstResults"  Grid.Row="6" HorizontalContentAlignment="Stretch" Grid.ColumnSpan="2" Margin="21,19,28,-220" Grid.Column="1" ItemTemplate="{StaticResource ProtocolDisplay}" SelectionChanged="openChosenProtocol"/>


            </Grid>
        </TabItem>
        <TabItem  x:Name="tiExpressionSearch" Header="מילה/ביטוי לשוני" Margin="240,-2,-382,-12" FontSize="16" >
            <Grid HorizontalAlignment="Center" Height="618"  VerticalAlignment="Bottom" FlowDirection="RightToLeft"  Width="879" Margin="-2,0,7,0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="244*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50"/>



                </Grid.RowDefinitions>


                <ComboBox x:Name="dpListExpression" SelectionChanged="dpListExpression_SelectionChanged"  IsEditable="True"  Grid.Column="2" HorizontalAlignment="Left" Margin="0,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="546" Height="40" IsTextSearchEnabled="True">
                    <!--<ComboBoxItem.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="MenuItem" Header="Delete" Click="MenuItem_OnClick"></MenuItem>
                        </ContextMenu>
                    </ComboBoxItem.ContextMenu>-->
                    <ComboBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="MenuItem" Header="Delete" Click="MenuItem_OnClick"></MenuItem>
                        </ContextMenu>
                    </ComboBox.ContextMenu>
                </ComboBox>
                
                <TextBox Grid.Column="1" HorizontalAlignment="Left" AutoWordSelection="True" Height="23" Margin="18.983,17,0,0" Grid.Row="1" TextWrapping="Wrap" Text="ביטוי/מילה" VerticalAlignment="Top" Width="120" BorderBrush="{x:Null}"/>
                <ListBox Name="lsResultsExpression"  ItemTemplate="{StaticResource ExpressionDisplay}"  Grid.Column="1" HorizontalAlignment="Left" Height="318" Margin="18.983,212,0,-480" Grid.Row="1" VerticalAlignment="Top" Width="838.017" Grid.ColumnSpan="2"/>
                <Button x:Name ="btnExpressionSearch" Click="btnSerach_Expression" Grid.Column="2" HorizontalAlignment="Left" Margin="197,98,0,-82" Grid.Row="1" VerticalAlignment="Top" Width="152" Height="34" Content="חפש" />
                <!--<ComboBox IsEditable="True" Name="RemotePathComboBox" VerticalAlignment="Center"
          SelectionChanged="RemotePathComboBoxOnSelectionChanged"
          Grid.Column="2" Margin="10,55,181,-30" KeyUp="HostNameOrIPAddress_OnKeyUp" Grid.Row="1">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <Button Click="RemoveRemotePathItem_Click" Margin="5" DockPanel.Dock="Left">
                                    <Image Source="add" />
                                </Button>
                                <TextBlock Name="ItemTextBlock" VerticalAlignment="Center" Text="{Binding Path=Path}"></TextBlock>
                            </DockPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>-->

            </Grid>
        </TabItem>

    </TabControl>


</Window>