<Window x:Class="knesset_app.CreateIndexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:knesset_app"
        mc:Ignorable="d"
        Title="יצירת אינדקס" Style="{StaticResource KnessetWindow}">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0">פרוטוקול:</Label>
        <ListBox Grid.Row="1" Grid.Column="0">[פרוטוקולים]</ListBox>

        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <Label Grid.Column="1">קבוצת מילים:</Label>
            <Button Style="{StaticResource ComboActionBtn}">קבוצה חדשה</Button>
            <Button Style="{StaticResource ComboDeleteBtn}">מחיקה</Button>
        </StackPanel>
        <ListBox Grid.Row="1" Grid.Column="1">[קבוצות]</ListBox>

        <Button Grid.Row="2" Margin="0 8 0 0">יצירת אינדקס</Button>
    </Grid>
</Window>
